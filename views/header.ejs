<header class="container">
  <h1><a href="#" id="logo">GENIE</a></h1>
  <ul class="nav nav-underline">
    <li class="nav-item">
      <a class="nav-link"  onclick="addActiveClass(this)" href="/menu">MENU</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" onclick="addActiveClass(this)" href="#">BLOG</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" onclick="addActiveClass(this)" href="#">ACCESS</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" onclick="addActiveClass(this)" href="#">CONTACT</a>
    </li>
  </ul>
</header>


<script>
  function addActiveClass(element) {
    // すべての要素から aria-current を削除
    var navLinks = document.querySelectorAll('.nav-link');
    navLinks.forEach(function(navLink) {
      navLink.removeAttribute('aria-current');
    });

    // クリックされた要素に aria-current を追加
    element.setAttribute('aria-current', 'page');
  }
</script>