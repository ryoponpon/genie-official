    <div id="menu" class="banner"><!-- 背景画像 -->

      <!-- ヘッダー -->
      <%- include('header.ejs') %>
      <!-- ヘッダー -->
      
      <h2>menu</h2>

      <div class="menu-card container">
        <% menus.forEach((menu) => { %>
          <div class="card" style="width: 35rem;">
            <img src="<%= menu.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h3 class="menu-name"><%= menu.name %></h3>
              <p class="card-text"><%= menu.explain %></p>
            </div>
          </div>
        <% }) %>        
        <button onclick="window.open('https://beauty.hotpepper.jp/kr/slnH000582982/coupon/', '_blank')" type="button" class="btn btn-outline-info btn-lg">RESERVATION</button>
